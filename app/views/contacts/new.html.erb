<% if @contact.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being created:</h2>
 
    <ul>
    <% @contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag "/contacts", method: :post do %>
<div>
  <h4>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @contact.first_name%>
  </h4>
</div>
<div>
  <h4>
    <%= label_tag :middle_name %>
    <%= text_field_tag :middle_name, @contact.middle_name %>
  </h4>
</div>
<div>
  <h4>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @contact.last_name%>
  </h4>
</div>
<div>
  <h4>
    <%= label_tag :email %>
    <%= text_field_tag :email, @contact.email%>
  </h4>
</div>
<div>
  <h4>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, @contact.phone_number%>
  </h4>
</div>
<div>
  <h4>
    <%= label_tag :address %>
    <%= text_field_tag :address, @contact.address%>
  </h4>
</div>
<div>
  <h4>
    <%= label_tag :bio %>
    <%= text_field_tag :bio, @contact.bio%>
  </h4>
</div>
<div>
  <%= submit_tag "Add Contact" %>
</div>
<% end %>